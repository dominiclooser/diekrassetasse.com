
@keyframes blink 
    50%
        opacity: 1

@keyframes color-blink
    0% 
        color: red
    33%
        color: dark
    66%
        color: blue 

.blink
    animation-name: blink
    animation-duration: 1.5s
    animation-iteration-count: infinite
    animation-timing-function: steps(1)

.fast-blink
    animation-name: blink
    animation-duration: 1s
    animation-iteration-count: infinite
    animation-timing-function: steps(1)


.color-blink
    animation-name: color-blink
    animation-duration: 1.5s
    animation-iteration-count: infinite
    animation-timing-function: steps(1)

h1
    width: 100%
    padding-top: 5vw
    position: absolute
    text-align: center
    font-size: 20vw
    text-transform: uppercase
    font-weight: 900
    line-height: 0.8
    color: red
    opacity: 0
    @extends .blink

.product
    font-family: header-font
    text-transform: uppercase
    font-weight: 900
    @extends .color-blink

.testimonial
    padding-right: calc(0.5*var(--unit))
    margin-bottom: calc(1*var(--unit))
    .text
        border-left: 2px solid dark
        padding-left: calc(0.5*var(--unit))

    .author
        margin-top: calc(0.5 * var(--unit))
        font-style: italic
        
blockquote
    padding: 0
    margin: 0


section
    margin-top: calc(2*var(--unit))
h2
    span  
        border-bottom: 3px solid dark
    margin-bottom: var(--unit)
   
body
    padding-bottom: calc(2*var(--unit))
