:root
    --m: var(--font-size)
    --s: calc(var(--m) / var(--scale-factor))
    --xs: calc(var(--s) / var(--scale-factor))
    --l: calc(var(--scale-factor) * var(--m))
    --xl: calc(var(--scale-factor) * var(--l))
    --xxl: calc(var(--scale-factor) * var(--xl))
    --xxxl: calc(var(--scale-factor) * var(--xxl))
    --xxxxl: calc(var(--scale-factor) * var(--xxxl))
    --xxxxxl: calc(var(--scale-factor) * var(--xxxxl))
  
body
    color: text-color
    font-weight: 400
    font-size: var(--m)
    font-family: body-font
    line-height: var(--line-height)
    text-rendering: geometricPrecision

h1, h2, h3, h4
    font-family: header-font

h1
    font-size: var(--xl)
    font-weight: 900
    line-height: 1

h2 
    font-size: var(--l)
    line-height: header-line-height
    font-weight: 900
    text-transform: uppercase
    margin: var(--two-units) 0 var(--two-units) 0
    color: primary-color
    border-top: small-border-width solid primary-color
    border-bottom: @border-top
    padding: var(--semi-unit)
    text-align: center
    
h3
    font-size: var(--m)
    line-height: header-line-height

a
    color: inherit
    text-decoration: underline
    &:hover
        cursor: pointer
        color: primaryColor