#hello
    font-size: var(--l)
    margin-bottom: calc(0.5*var(--unit))
    line-height: 1.2

#number
    font-family: header-font
    font-weight: 900
    font-size: 200px
    text-align: center
    color: blue
    opacity: 0
    @extends .fast-blink

#faq
