@keyframes blink 
    50%
        opacity: 1

@keyframes color-blink
    0% 
        color: red
    33%
        color: dark
    66%
        color: blue 

.blink
    animation-name: blink
    animation-duration: 1.5s
    animation-iteration-count: infinite
    animation-timing-function: steps(1)

.fast-blink
    animation-name: blink
    animation-duration: 1s
    animation-iteration-count: infinite
    animation-timing-function: steps(1)


.color-blink
    animation-name: color-blink
    animation-duration: 1.5s
    animation-iteration-count: infinite
    animation-timing-function: steps(1)

.hero
    margin: var(--double-unit) 0
    font-size: 13vw
    text-transform: uppercase
    font-weight: 900
    line-height: 0.9
    color: red
    opacity: 0
    @extends .fast-blink

#intro
    img
        max-height: 80vh

.product-name
    font-family: header-font
    text-transform: uppercase
    font-weight: 900
    @extends .color-blink

.testimonial
    padding-right: calc(0.5*var(--unit))
    margin-bottom: calc(1*var(--unit))
    .text
        border-left: 2px solid dark
        padding-left: calc(0.5*var(--unit))

    .author
        margin-top: calc(0.5 * var(--unit))
        font-style: italic
        
blockquote
    padding: 0
    margin: 0

section
    margin-top: calc(2*var(--unit))

h2
    span  
        border-bottom: 3px solid dark
   
#konsum
