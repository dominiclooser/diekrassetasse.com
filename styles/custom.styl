#hero
    img
        border-left: 10px solid dark
        border-right: @border-left
        padding: 0 10px

    margin-top: calc(2 * var(--unit))
    h1
        margin-top: var(--unit)
        font-size: var(--xxxl)
        text-transform: uppercase
        font-weight: 900
        animation-name: color
        animation-duration: 2s
        animation-iteration-count: infinite
        animation-timing-function: steps(1)

@keyframes color
    0% 
        color: red
    33%
        color: dark
    66%
        color: blue 

.testimonial
    padding-right: calc(0.5*var(--unit))
    margin-bottom: calc(2*var(--unit))
    font-size: var(--m)
    font-weight: normal

    .text
        border-left: 2px solid dark
        padding-left: calc(0.5*var(--unit))

    .author
        margin-top: calc(0.5 * var(--unit))
        font-style: italic
        
blockquote
    padding: 0
    margin: 0

#price-list
    list-style: bullets
    li
        margin-top: var(--unit)
#index
    section
        margin-top: calc(2*var(--unit))
    h2
        span  
            border-bottom: 3px solid dark
        margin-bottom: var(--unit)
   