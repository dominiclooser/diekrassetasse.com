{
  "environment": {
    "matrix": [
      {
        "nodejs_version": "0.10"
      },
      {
        "nodejs_version": "0.12"
      },
      {
        "nodejs_version": "4"
      },
      {
        "nodejs_version": "5"
      },
      {
        "nodejs_version": "6"
      }
    ]
  },
  "install": [
    {
      "ps": "Install-Product node $env:nodejs_version"
    },
    "npm config set loglevel warn",
    "npm install --silent"
  ],
  "test_script": [
    "node --version",
    "npm --version",
    "npm test"
  ],
  "build": "off"
}