{
  "init": [
    "git config --global core.autocrlf true"
  ],
  "environment": {
    "matrix": [
      {
        "nodejs_version": "0.10"
      },
      {
        "nodejs_version": "0.12"
      },
      {
        "nodejs_version": "4"
      }
    ]
  },
  "platform": [
    "x86",
    "x64"
  ],
  "install": [
    {
      "ps": "Install-Product node $env:nodejs_version"
    },
    "npm install -g grunt-cli",
    "npm install -g npm",
    "npm install"
  ],
  "test_script": [
    "node --version && npm --version",
    {
      "ps": "npm test # PowerShell"
    },
    {
      "cmd": "npm test"
    }
  ],
  "build": "off",
  "matrix": {
    "fast_finish": true
  },
  "cache": [
    "node_modules -> package.json"
  ]
}