
///
/// home
///

#home
    header
        padding: var(--unit) 0
        margin-top: var(--unit)
        h1
            text-transform: uppercase
            font-size: var(--xxl)
            line-height: 0.9 

#buy-button
    text-decoration: none
    margin-top: var(--two-units)
    color: white
    background-color: primary-color

///
/// border
///

#border
    padding: var(--two-units) 0
    background-color: primary-color
    color: white
    font-size: var(--l)
    p+p 
        margin-top: var(--unit)

#buttons
    margin-top: var(--unit)
    display: flex
    justify-content: space-between
    a
        text-align: center
        text-decoration: none
        background-color: dark
        color: white
        width: 45%
        &:hover
            background-color: white
            color: dark
        
///
/// konsum
///

#products
    display: flex
    flex-wrap: wrap

.product
    max-width: 50%
    min-width: 40%
    flex: 1
    margin-bottom: var(--unit)
    &:nth-child(2n+1)
        // background-color: red
        margin-right: var(--semi-unit)
    &:nth-child(2n+2)
        // background-color: blue
        margin-left: var(--semi-unit)
    // &:nth-child(3n+3)
    //     background-color: yellow
    @media triple-grid
        max-width: 33%
    .description
        margin: 0
        margin-top: var(--semi-unit)
        padding: var(--semi-unit) 0
    .name
        margin-bottom: calc(0.25*var(--unit))
        font-family: body-font
        font-style: italic
///
/// werbung
/// 

#werbung
    .video-wrapper
        margin-top: var(--two-units)
    img
        margin-top: var(--unit)

///
/// firma
///

.person
    margin-bottom: var(--triple-unit)
    p 
        padding: var(--semi-unit) 0
        border-bottom: 1px solid grey
        font-family: header-font
        text-transform: uppercase
    .role
        color: primary-color

///
/// faq
///

#faq
    margin-top: var(--two-units)
    dt
        color: secondary-color
        // font-weight: bold
    dd
        margin-bottom: var(--unit)
        margin-left: 0


    




